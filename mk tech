<script>
// LOGIN
const USERNAME="mkjose", PASSWORD="mungajose456";
function login(){
 const u=document.getElementById("user").value;
 const p=document.getElementById("pass").value;
 if(u===USERNAME && p===PASSWORD){
   document.getElementById("login").style.display="none";
   document.getElementById("site").style.display="block";
 } else {document.getElementById("msg").innerText="Invalid username or password";}
}
function openDashboard(){
 document.getElementById("site").style.display="none";
 document.getElementById("dashboard").style.display="flex";
 initDashboard();
}

// ===== DASHBOARD DATA & CHARTS =====
function initDashboard(){
 // Animated counters
 animateValue("totalUsers",0,120,1000," Users");
 animateValue("revenue",0,54000,1200," KES");
 animateValue("projects",0,8,1000," Projects");

 // BAR CHART
 const barCanvas=document.getElementById("barChart");
 const bCtx=barCanvas.getContext("2d");
 const barData=[5,12,9,15,20,18,25,22,28,30,35,40];
 const labels=["Jan","Feb","Mar","Apr","May","Jun","Jul","Aug","Sep","Oct","Nov","Dec"];
 const maxVal=Math.max(...barData)*1.2;
 const barWidth=25, spacing=15;
 const tooltip=document.getElementById("tooltip");

 function drawBarChart(){
   bCtx.clearRect(0,0,barCanvas.width,barCanvas.height);
   barData.forEach((val,i)=>{
     const x=i*(barWidth+spacing)+20;
     const h=(val/maxVal)*barCanvas.height;
     bCtx.fillStyle=val<10?"#0d6efd":val<20?"#3a86ff":"#ff4d4d";
     bCtx.fillRect(x,barCanvas.height-h,barWidth,h);
     bCtx.fillStyle="#333"; bCtx.font="12px Arial";
     bCtx.fillText(labels[i],x,barCanvas.height-2);
   });
 }
 drawBarChart();

 barCanvas.addEventListener("mousemove",(e)=>{
   const rect=barCanvas.getBoundingClientRect();
   const x=e.clientX-rect.left, y=e.clientY-rect.top;
   tooltip.style.display="none";
   barData.forEach((val,i)=>{
     const bx=i*(barWidth+spacing)+20;
     const by=barCanvas.height-(val/maxVal)*barCanvas.height;
     if(x>bx && x<bx+barWidth && y>by && y<barCanvas.height){
       tooltip.style.display="block";
       tooltip.style.left=e.pageX+10+"px";
       tooltip.style.top=e.pageY-30+"px";
       tooltip.innerText=labels[i]+": "+val;
     }
   });
 });
 barCanvas.addEventListener("mouseleave",()=>{tooltip.style.display="none";});

 // LINE CHART
 const lineCanvas=document.getElementById("lineChart");
 const lCtx=lineCanvas.getContext("2d");
 const lineData=[10,15,12,20,18,22,25,28,30,35,38,40];
 function drawLineChart(){
   lCtx.clearRect(0,0,lineCanvas.width,lineCanvas.height);
   lCtx.beginPath();
   lCtx.moveTo(20,lineCanvas.height-lineData[0]/50*lineCanvas.height);
   lineData.forEach((v,i)=>{
     const x=i*(lineCanvas.width/lineData.length)+20;
     const y=lineCanvas.height-v/50*lineCanvas.height;
     lCtx.lineTo(x,y);
   });
   lCtx.strokeStyle="#0d6efd"; lCtx.lineWidth=2;
   lCtx.stroke();
 }
 drawLineChart();

 // PIE CHART
 const pieCanvas=document.getElementById("pieChart");
 const pCtx=pieCanvas.getContext("2d");
 const pieData=[5,3,2];
 const colors=["#0d6efd","#3a86ff","#ff4d4d"];
 const total=pieData.reduce((a,b)=>a+b,0);
 let start=0;
 pieData.forEach((v,i)=>{
   const angle=v/total*2*Math.PI;
   pCtx.beginPath();
   pCtx.moveTo(pieCanvas.width/2,pieCanvas.height/2);
   pCtx.arc(pieCanvas.width/2,pieCanvas.height/2,80,start,start+angle);
   pCtx.fillStyle=colors[i]; pCtx.fill();
   start+=angle;
 });
}

// Animate numbers
function animateValue(id,start,end,duration,suffix){
 let obj=document.getElementById(id), current=start;
 let range=end-start;
 let increment=end>start?1:-1;
 let step=Math.abs(Math.floor(duration/range));
 let timer=setInterval(()=>{
   current+=increment;
   obj.innerText=current+suffix;
   if(current==end) clearInterval(timer);
 },step);
}
</script>

